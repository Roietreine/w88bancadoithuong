<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.W88BanCaDoiThuong" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapMatchParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWrapParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>

    <style name="SmallRoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4%</item>
    </style>

    <style name="MediumRoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14%</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextViewRegularStyle" parent="WrapParent">
        <item name="android:textSize">18dp</item>

    </style>

    <style name="TextViewSemiBoldStyle" parent="WrapParent">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TextViewBoldStyle" parent="WrapParent">
        <item name="android:textSize">18dp</item>

    </style>

    <style name="CustomRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:scaleX">1.5</item>
        <item name="android:scaleY">1.5</item>

    </style>

    <style name="strat_image">
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>